<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/ict_nav_header"
    android:orientation="vertical"
    android:gravity="bottom"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/nav_header_logo_w"
        android:layout_height="@dimen/nav_header_logo_h"
        android:layout_marginLeft="@dimen/nav_header_marginL"
        android:layout_marginStart="@dimen/nav_header_marginS"
        android:layout_marginBottom="@dimen/nav_header_marginB"
        android:contentDescription="@string/ict_trainings"
        app:srcCompat="@drawable/ict_logo" />

</LinearLayout>
